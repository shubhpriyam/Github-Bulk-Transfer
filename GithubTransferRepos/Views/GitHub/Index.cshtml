@model List<GitHubRepositoryModel>

@using (Html.BeginForm("Transfer", "GitHub", FormMethod.Post))
{
    <table>
        <tr>
            <th>Repository Name</th>
            <th>Select</th>
        </tr>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].Name</td>
                <td>
                    @Html.HiddenFor(m => m[i].Id) <!-- Add hidden field for Id -->
                    @Html.CheckBoxFor(m => m[i].IsSelected)
                </td>
            </tr>
        }
    </table>
    <input type="submit" value="Transfer Selected Repositories">
}
